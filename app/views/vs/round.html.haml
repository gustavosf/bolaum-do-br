#vs.row
  .span5{:style => 'text-align:center'}
    = image_tag @players[0].photo
    
    %h4.divider Score
    = @players[0].bets.sum :points

    %h4.divider Apostas
    - points = gm = 0
    - @round.each do |game|
      - bet = game.bets.find_by_user_id @players[0].id
      - bet = bet.nil? ? ['-','-',0] : [bet.home_score, bet.visitor_score, bet.points]
      - score = game.home_score.nil? ? ['-', '-'] : [game.home_score, game.visitor_score]
      - points += bet[2]
      - gm += bet[2] / 6
      .jogo{:onmouseover => 'showScore(this)',:onmouseout => 'hideScore(this)',:score => score,:bet => bet}
        .info
          = game.date.strftime "%d/%m %H:%M" + ' - '
          = game.stadium ? game.stadium.popular_name : 'A definir'
        .placar
          .mandante
            .logo= image_tag game.home.logo
            .team= game.home.acronym
            .score= bet[0]
          %span x
          .visitante
            .score= bet[1]
            .team= game.visitor.acronym
            .logo= image_tag game.visitor.logo
          .pontuation{:style => 'float:right;margin-right:10px'}
            = bet[2]
    %h4.divider PONTUAÇÃO
    = "#{points} Pontos"
    %br
    = "#{gm} GMs"
  
