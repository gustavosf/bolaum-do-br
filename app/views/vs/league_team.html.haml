%style
  :plain
    .field {
      background: url('/assets/field.jpg') no-repeat;
      background-size: 100%;
      padding-top: 1%;
    }
    .player {
      width: 15%;
      height: 11%;
      position: relative;
      text-align: center;
      overflow: visible;
      display: block;
    }
    .player span {
      display: block;
      position: absolute;
      margin-left: -35%;
      background-image: url(/assets/transparent-bg.png);
      color: white;
      font-weight: bold;
    }
    .player img { cursor: pointer; width: 42%; vertical-align: top; }
    .player.coach           { margin: 0      0 0 5%;    }
    .player.goalkeeper      { margin: 5%     0 0 42.5%; }
    .player.back1           { margin: 10%    0 0 25%;   }
    .player.back2           { margin: -6.5%  0 0 60%; }
    .player.leftback        { margin: 15%     0 0 10%;   }
    .player.rightback       { margin: -6.5%  0 0 75.5%; }
    .player.def-midfielder1 { margin: 30%    0 0 33%;   }
    .player.def-midfielder2 { margin: -25%  0 0 52%;   }
    .player.midfielder1     { margin: 20%    0 0 10%;   }
    .player.midfielder2     { margin: -4.5%  0 0 75%;   }
    .player.striker1        { margin: 10%    0 0 30%;   }
    .player.striker2        { margin: 15%     0 0 55%;   }
    .spacer {
      position: relative;
      margin-top: 55%;
      opacity: 0;
      width: 1px;
    }