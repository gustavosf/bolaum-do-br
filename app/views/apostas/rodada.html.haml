- @games.each do |game|
  .row.jogo{:ref => "#{game.id}"}
    = bet = game.bets.find_by_user_id current_user.id
    .span3.info
      = game.date.strftime "%d/%m %H/%M" + ' - '
      = game.stadium ? game.stadium.popular_name : 'A definir'
    .row
      .span3.placar
        %div.mandante
          %img{:src => "#{game.home.logo}"}
          %input{:maxlength => "1", :type => "text", :value => "#{bet.home_score unless bet.nil?}"}
        %span vs
        %div.visitante
          %input{:maxlength => "1", :type => "text", :value => "#{bet.visitor_score unless bet.nil?}"}
          %img{:src => "#{game.visitor.logo}"}